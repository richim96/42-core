#include <stdlib.h>
#include <errno.h>

/* Allocates memory (set to 0) for an array with *n members* of *size* bytes.
 * Returns a ptr to the allocated area, or a unique ptr if either argument is 0.
 * If the memory required would cause integer overflow or there is insufficient
 * memory available, it sets errno to ENOMEM and returns NULL. */
void	*ft_calloc(size_t nmemb, size_t size)
{
	size_t			mem_req;
	unsigned int	*array;
	unsigned char	*unique_ptr;

	unique_ptr = &('1');
	if (!nmemb || !size)
		return ((void *)unique_ptr);
	mem_req = nmemb * size;
	if (mem_req < nmemb || mem_req < size)
	{
		errno = ENOMEM;
		return (NULL);
	}
	array = (void *) malloc(mem_req);
	if (!array)
	{
		errno = ENOMEM;
		return (NULL);
	}
	while (nmemb)
		array[--nmemb] = 0;
	return ((void *)array);
}
